# Environment Variables Configuration
# Copy this file to .env and fill in your values

# ============================================
# LLM Provider Configuration
# ============================================

# LLM Provider: deepseek, openrouter, openai
# Default: deepseek (鍥戒骇API锛屾帹鑽愪娇鐢?
LLM_PROVIDER=deepseek

# DeepSeek API Configuration (榛樿)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_BASE=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# OpenRouter API Configuration (澶囬€?
# 濡傛灉 LLM_PROVIDER=openrouter锛屽垯浣跨敤姝ら厤缃?OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=deepseek/deepseek-chat

# OpenAI API Configuration (澶囬€?
# 濡傛灉 LLM_PROVIDER=openai锛屽垯浣跨敤姝ら厤缃?OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# ============================================
# LLM General Settings
# ============================================

# LLM Parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=60

# ============================================
# ChromaDB Configuration
# ============================================

# ChromaDB persistence directory
CHROMA_DB_PATH=chroma_db

# ============================================
# File System Paths
# ============================================

# Notes directory (Obsidian-style notes)
NOTES_DIR=notes

# Documents directory (uploaded documents)
DOCUMENTS_DIR=documents

# ============================================
# Logging Configuration
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional, leave empty for console only)
LOG_FILE=logs/app.log

# ============================================
# Application Configuration
# ============================================

# Application name
APP_NAME=OmniKnowledgeBase
APP_VERSION=0.1.0

